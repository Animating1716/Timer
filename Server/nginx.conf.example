# Nginx config example for Habit Timer Sync API
# Add this to your existing nginx configuration
# (Assumes you already have SSL set up via certbot/Let's Encrypt)

server {
    listen 443 ssl http2;
    server_name habits.yourdomain.com;  # Change this!

    # SSL certificates (managed by certbot)
    ssl_certificate /etc/letsencrypt/live/habits.yourdomain.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/habits.yourdomain.com/privkey.pem;

    location / {
        proxy_pass http://127.0.0.1:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# HTTP redirect
server {
    listen 80;
    server_name habits.yourdomain.com;
    return 301 https://$server_name$request_uri;
}
